<UserControl x:Class="XyGraph.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XyGraph">
    <Grid x:Name="rootGrid" ClipToBounds="True" Background="Transparent" MinWidth="700" MinHeight="400">
        
        
        <local:Graph x:Name="graph" />

        <Grid x:Name="SidebarContainer" HorizontalAlignment="Left" VerticalAlignment="Stretch" MinHeight="0" Panel.ZIndex="100" Margin="16" ClipToBounds="False">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="SidebarContainerTranslate" X="0" Y="0" />
            </Grid.RenderTransform>
            <Border x:Name="SidebarContent" Width="240" HorizontalAlignment="Left" VerticalAlignment="Stretch"
                    Background="#E6EEF0" Opacity="0.8" CornerRadius="4">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" Opacity="0.35" BlurRadius="12" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Graph Inputs" FontWeight="Bold" Margin="8,8,8,4" />
                    <Button x:Name="AddInputButton" Content="Add Input" Margin="8" />
                    <ListBox x:Name="InputsList" Margin="8" />
                </StackPanel>
            </Border>

            <Button x:Name="ToggleSidebarButton" Width="28" Height="36" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Margin="232,0,0,0" ToolTip="Collapse sidebar" Background="Transparent" BorderThickness="0" Padding="0">
                <Border CornerRadius="6" Background="#CCEEEEEE" Width="28" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" BorderBrush="#444444">
                    <Viewbox Width="16" Height="16" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas Width="24" Height="24">
                            <Path x:Name="ToggleIconPath" Fill="Black" Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
                        </Canvas>
                    </Viewbox>
                </Border>
            </Button>
        </Grid>
        
    </Grid>
</UserControl>
